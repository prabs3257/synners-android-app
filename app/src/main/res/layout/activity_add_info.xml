<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.views.AddInfoActivity"
    android:background="#F8F8F8">


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/synner_text_logo"></ImageView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/add_info_top_img">

    </ImageView>


    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload ID"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"></TextView>
    <ImageView
        android:id="@+id/upload_id_btn"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/upload_pic">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload CV/Resume"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"></TextView>
    <ImageView
        android:id="@+id/upload_resume_btn"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/upload_resume_pic">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Competiting Experience"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"></TextView>
    <EditText
        android:id="@+id/comp_exp_et"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/round_back_edit_text"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Explain your competiting experience"
        android:textSize="14sp"
        android:layout_marginBottom="10dp"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Society/Club Experience"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"></TextView>
    <EditText
        android:id="@+id/soc_exp_et"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/round_back_edit_text"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Explain your society/club experience"
        android:textSize="14sp"
        android:layout_marginBottom="10dp"></EditText>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional Links"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/round_back_edit_text"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:id="@+id/links_et"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Additional Social Media Links"
        android:textSize="14sp"
        android:layout_marginBottom="10dp"></EditText>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="SUBMIT"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/round_back_edit_text">

    </Button>



</LinearLayout>